<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnColor">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/light_blueberry</item>
        <item name="fontFamily">@font/caesar_dressing</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="mainHeader">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/unsightly</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>
    <style name="label">
        <item name="android:textColor">@color/dark_plum</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/caesar_dressing</item>
    </style>
    <style name="label.Small" parent="label">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="layout">
        <item name="android:background">@color/light_green</item>
        <item name="android:padding">25dp</item>
    </style>
    <style name="labelCakra">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/cakra</item>
    </style>
    <style name="labelAcherus">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/acherus_feral</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="labelAcherus.Small" parent="labelAcherus">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="labelRose">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/rose_versailles2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="projNames">
        <item name="android:background">@drawable/blue_rect</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/adventure_indiana</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="tableStyle">
        <item name="paddingStart">1dp</item>
        <item name="paddingEnd">1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="fontFamily">@font/acherus_feral</item>
        <item name="android:textSize">15sp </item>
        <item name="android:textColor">@color/dark_plum</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tableStyle.BlueText" parent="tableStyle">
        <item name="paddingStart">1dp</item>
        <item name="paddingEnd">1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="fontFamily">@font/acherus_feral</item>
        <item name="android:textSize">18sp </item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/acherus_feral</item>
        <item name="android:textStyle">bold</item>
        <item name="android:popupBackground">@color/light_green</item>
    </style>
</resources>
