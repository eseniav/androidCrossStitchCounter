<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout">
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/avatar"
        android:src="@drawable/proj"
        android:background="@drawable/frame"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        >
        <RadioButton
            android:id="@+id/future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Будущий"
            style="@style/labelAcherus"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текущий"
            style="@style/labelAcherus"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Завершенный"
            style="@style/labelAcherus"
            android:textSize="16sp"/>
    </RadioGroup>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow android:padding="5dp" android:layout_height="wrap_content">
            <TextView android:text="Автор дизайна" style="@style/label" android:paddingEnd="10sp"/>
            <EditText/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView android:text="Размер" style="@style/label" android:paddingEnd="10sp"/>
                <EditText/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView android:text="Всего крестиков" style="@style/label" android:paddingEnd="10sp"/>
                <EditText/>
            </TableRow>
            <TableRow android:padding="5dp" android:layout_height="wrap_content" android:gravity="center_vertical">
                <TextView android:text="Вышито до \nрегистрации"
                    style="@style/label" android:paddingEnd="10sp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
                <EditText/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView android:text="Дата начала" style="@style/label" android:paddingEnd="10sp"/>
                <EditText/>
            </TableRow>
            <TableRow android:padding="5dp" android:layout_height="wrap_content" android:gravity="center_vertical">
                <TextView android:text="Планируется \nвышить к" style="@style/label" android:paddingEnd="10sp"/>
                <EditText/>
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView android:text="Завершен" style="@style/label" android:paddingEnd="10sp"/>
                <EditText/>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:id="@+id/enterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Сохранить"
        style="@style/btnColor"
        app:layout_constraintTop_toBottomOf="@id/scrollview"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
