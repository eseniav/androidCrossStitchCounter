<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout">
    <TextView
        android:id="@+id/headProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        style="@style/mainHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:contentDescription="@string/avatar"
        android:src="@drawable/test"
        android:background="@drawable/frame"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/headProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ScrollView
        android:id="@+id/profileForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/surnameRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/nameRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/patrRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/logRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/passRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/repeatPassRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/phoneRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/emailRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.androidcrossstitchcounter.ProfileFieldView
                android:id="@+id/birthDateRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
