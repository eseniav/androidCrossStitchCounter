<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/label"
        style="@style/label.Small"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <TextView android:id="@+id/value"
        style="@style/labelAcherus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        />
    <EditText
        android:id="@+id/edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1.8"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/visibilityToggle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/eye_close"
        android:contentDescription="Переключить видимость пароля"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end|center_vertical"
        />
    <ImageView
        android:id="@+id/imageEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/edit"
        android:src="@drawable/edit"
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/imageCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Подтвердить изменения"
        android:src="@drawable/check"
        android:layout_margin="5dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/imageCancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Отмена"
        android:src="@drawable/cancel"
        android:layout_margin="5dp"
        android:visibility="gone"
        />
</LinearLayout>
