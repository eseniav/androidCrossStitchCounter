<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="wrap_content"
    >
    <TextView android:text="@string/Lname" style="@style/label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        />
    <TextView android:id="@+id/value"
        android:text="Иванова"
        style="@style/labelAcherus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        />
    <EditText
        android:id="@+id/edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/imageEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/edit"
        android:src="@drawable/edit"
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/imageCheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Подтвердить изменения"
        android:src="@drawable/check"
        android:layout_margin="5dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/imageCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Отмена"
        android:src="@drawable/cancel"
        android:layout_margin="5dp"
        android:visibility="gone"
        />
</LinearLayout>
